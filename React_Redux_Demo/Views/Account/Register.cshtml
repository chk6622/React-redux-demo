@model Onboarding_Task.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "User register";
}

<div class='register_article'>
        <div class='block'></div>
        <div class='register_content'>
            <div class='register_title'>
                User Register
            </div>

                <form method="post" class='register_workarea'>
                    <div asp-validation-summary="All" class="register_alertfield text-danger"></div>
                    <div class='register_textfield'>

                        <input asp-for="Email" class="form-control" placeholder="Email" />
                    </div>
                    <div class='register_textfield'>

                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class='register_textfield'>

                        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                    </div>
                    <div class='register_buttonField'>
                        <button type="submit" class="btn btn-primary">Register</button>
                        <button type="button" class="btn btn-primary" onclick="returnLoginPage()">Back</button>
                    </div>
                </form>
        </div>
</div>

<script language="javascript">
    var returnLoginPage = function () {
        window.location = '/';
    }
</script>

